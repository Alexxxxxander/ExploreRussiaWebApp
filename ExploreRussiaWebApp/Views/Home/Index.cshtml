@using System.Globalization
@model List<ExploreRussia.Domain.Models.Trip>
@{
    ViewData["Title"] = "Главная страница";
}

<h1>Походы</h1>
<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Дата начала</th>
            <th>Дата конца</th>
            <th>Цена</th>
            <th>Максимум участников</th>
            <th>Гид</th>
            <th>Отзывы</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var trip in Model!)
        {
            <tr>
                <td>@trip.TripName</td>
                <td>@trip.Description</td>
                <td>@trip.StartDate.Value.ToShortDateString()</td>
                <td>@trip.EndDate.Value.ToShortDateString()</td>
                <td>@string.Format("{0:C0}",trip.Price)</td>
                <td>@trip.MaxParticipants</td>
                <td>
                    @{
                        if(trip.GuideId.HasValue){
                            @trip.Guide?.FirstName;
                        }
                    }
                   </td>
                <td>
                    @{
                        if(trip.Reviews.Any())
                        {
                            @trip.Reviews.ToList().Average(x => x.Rating)
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
