@model List<ExploreRussia.Domain.Models.Order>
@{
    ViewData["Title"] = "Админ панель";
}

<h1>Админ панель</h1>

<p>Добро пожаловать!</p>

<a asp-controller="Guide" asp-action="Index" class="btn btn-secondary">Manage Guides</a>
<a asp-controller="Trip" asp-action="Index" class="btn btn-secondary">Manage Trips</a>

<h2>Заказы</h2>
<table class="table table-striped">
    <thead>
        <tr>
            <th>ФИО клиента</th>
            <th>Номер телефона</th>
            <th>Электронная почта</th>
            <th>Название похода</th>
            <th>Цена</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.User.LastName @order.User.FirstName @order.User.Patronymic</td>
                <td>@order.User.Phone</td>
                <td>@order.User.Email</td>
                <td>@order.Trip.TripName</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>
                    <a asp-action="EditOrder" asp-route-id="@order.Id" class="btn btn-primary">Изменить цену</a>
                </td>
            </tr>
        }
    </tbody>
</table>