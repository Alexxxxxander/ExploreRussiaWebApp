@using System.Globalization
@model ExploreRussia.Domain.Models.Trip

@{
    ViewData["Title"] = "Детали похода";
}

<h1>Детали похода</h1>

<div>
    <h4>Поход</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Название похода
        </dt>
        <dd class="col-sm-10">
            @Model.TripName
        </dd>
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Model.Description
        </dd>
        <dt class="col-sm-2">
            Дата начала
        </dt>
        <dd class="col-sm-10">
            @Model.StartDate?.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Дата окончания
        </dt>
        <dd class="col-sm-10">
            @Model.EndDate?.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Цена
        </dt>
        <dd class="col-sm-10">
            @string.Format(CultureInfo.InvariantCulture, "{0:C}", Model.Price)
        </dd>
        <dt class="col-sm-2">
            Количество участников
        </dt>
        <dd class="col-sm-10">
            @Model.MaxParticipants
        </dd>
        <dt class="col-sm-2">
            Изображение
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.ImageUrl" alt="@Model.TripName" class="img-fluid" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Редактировать</a> |
    <a asp-action="Index">Назад к списку</a>
</div
